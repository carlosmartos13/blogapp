


<h3>Nova Categoria</h3>

<div class="card">

   
    <div class="card-body">
        {{#each erros}}
                <div class="alert alert-danger">
                    {{texto}}
                </div>
            {{else}}
            {{/each}}
        <form action="/admin/categorias/nova" method="POST">

        <label for="nome">Nome</label>
        <input class="form-control" type="text" id="nome" name="nome" placeholder="Nome da Categoria">

        <label for="slug" class="mt-4">Slug</label>
        <input class="form-control" type="text" id="slug" name="slug" placeholder="slug da Categoria">

        <a href="#"> <button type="submit" class="btn btn-success mt-4">Criar categoria</button></a>

        </form>
    </div>

</div>